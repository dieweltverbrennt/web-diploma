value;\n    };\n    const saveHallsChanges = () => {\n      console.log('save');\n    };\n    const chairType = (row, seat, mode) => {\n      if (mode) {\n        console.log('conf-step__chair_' + mode);\n        return 'conf-step__chair_' + mode;\n      }\n      const current = currentHall.value.seats.find(item => item.row_number === row && item.seat_number == seat);\n      if (current === undefined) {\n        return 'conf-step__chair_standart';\n      }\n      return 'conf-step__chair_' + current.type;\n    };\n    const changeChairType = (row, seat) => {\n      const current = currentHall.value.seats.find(item => item.row_number === row && item.seat_number == seat);\n      console.log;\n      current.type = 'vip';\n    };\n    const __returned__ = {\n      halls,\n      hallConf,\n      prices,\n      sessions,\n      sale,\n      hallsData,\n      hallsDataNew,\n      selectedHall,\n      currentHall,\n      createNewHall,\n      deleteHall,\n      resetHallsChanges,\n      saveHallsChanges,\n      chairType,\n      changeChairType,\n      ref,\n      onMounted,\n      computed,\n      get apiRequest() {\n        return apiRequest;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","computed","apiRequest","halls","hallConf","prices","sessions","sale","hallsData","hallsDataNew","selectedHall","currentHall","value","length","current","find","item","hall_number","response","get","data","JSON","parse","stringify","error","console","createNewHall","post","rows_count","seats_in_row_count","seat_count","deleteHall","id","_method","resetHallsChanges","saveHallsChanges","log","chairType","row","seat","mode","seats","row_number","seat_number","undefined","type","changeChairType"],"sources":["C:/Users/Marya/Desktop/cinema-booking-app/client/src/components/admin/RedactorPage.vue"],"sourcesContent":["<template>\r